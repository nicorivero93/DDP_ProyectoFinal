<div class="containter" style="margin-top: 50px;">
    {{!-- fila 1 --}}
    <div class="row">
        <p class="text-end">Hola {{usuario}} !<a class="btn btn-danger" href="/admin/login/logout"><i class="fas fa-sign-out-alt"></i></a></p>
    </div>
    {{!-- fin fila 1 --}}
        {{!-- fila 2 --}}
        <div class="row">
            <div class="col-7">
                <h3>Listado de Novedades</h3>
            </div>
            <div class="col-5 text-end">
                <a class="btn btn-success" href=""><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</a>
            </div>
        </div>
        {{!-- fin fila 2 --}}
            {{!-- fila 3 --}}
            <div class="row">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr class="table-dark">
                                <th scope="col">#</th>
                                <th scope="col">Titulo</th>
                                <th class="text-center" scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each Novedades}}
                            <tr>
                                <th scope="row">{{id}}</th>
                                <td>{{titulo}}</td>
                                <td class="text-end">
                                    <a class="btn btn-secondary" href="/admin/novedades/modificar/{{id}}"><i class=" fa fa-pencil" aria-hidden="true"></i></a>
                                    <a class="btn btn-secondary" href="/admin/novedades/eliminar/{{id}}"><i class=" fa fa-trash" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        {{!-- fin fila 3 --}}
        <div class="col-2 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success">
            <i class="fa fa-plus"></i>Nuevo</a>
        </div>
</div>