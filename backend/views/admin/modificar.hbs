<div class="containter" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la Novedad</h4>
            <form action="/admin/novedades/modificar" method="post" >
                <div class="form-group">
                    <input type="text" value="{{novedad.id}}" name="id">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" value="{{novedad.titulo}}" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" value="{{novedad.subtitulo}}" placeholder="Subtitulo" name="subtitulo"></textarea>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" value="{{novedad.cuerpo}}" placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
        </div>
    </div>
</div>
{{#if error}}
    <h5>{{message}}</h5>
{{/if}}